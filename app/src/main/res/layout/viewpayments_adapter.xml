<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal"    android:gravity="center"    android:id="@+id/viewpayments_adapter">    <TextView        android:id="@+id/owed_users"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentStart="true"        android:layout_alignParentTop="true"        android:layout_gravity="center_vertical"        android:text="Chicken Rice"        android:textColor="#040404"        android:textSize="20sp"        android:layout_marginLeft="20dp"        android:layout_marginTop="10dp"        android:textStyle="bold"        android:typeface="sans" />    <TextView        android:id="@+id/owed_amount"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_toRightOf="@+id/owed_users"        android:layout_marginLeft="40dp"        android:layout_marginTop="10dp"        android:text="2"        android:textSize="20sp"        android:layout_gravity="center_vertical"        android:typeface="sans" />    <Button        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/settlepayment"        android:text="Settle"        android:layout_marginRight="20dp"        android:layout_gravity="center_vertical"        android:layout_alignParentRight="true"        /></RelativeLayout>