<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="?attr/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#d1e4e4"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/text_view_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text_view_event_ishost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="HOST"
            android:textColor="#FFF"
            android:background="#F00"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding = "5dp"
            android:layout_below="@id/text_view_event_title"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text_view_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_below="@id/text_view_event_ishost"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/button_view_event"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical= "true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentRight="true"
            android:text="View" />



        <TextView
            android:id="@+id/text_view_event_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Status: "
            android:layout_below="@id/text_view_event_description"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text_view_event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="22"
            android:layout_below="@+id/text_view_event_status_label" />

    </RelativeLayout>

</android.support.design.card.MaterialCardView>
